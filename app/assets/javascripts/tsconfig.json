{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "newLine": "lf",
    "declarationDir": "../../../dist/@types",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "typeRoots": ["./@types"],
    "types": ["@types/jest"],
    "paths": {
      "%/*": ["../templates/*"],
      "@/*": ["./*"],
      "@Controllers/*": ["./controllers/*"],
      "@Views/*": ["./views/*"],
      "@Services/*": ["./services/*"],
      "@node_modules/*": ["../../../node_modules/*"],
    }
  }
}
