    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.23",
    "@types/jsdom": "^16.2.10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.25.0",
    "jest": "^26.6.3",
    "jsdom": "^16.5.3",
    "terser-webpack-plugin": "^5.1.1",
    "ts-jest": "^26.5.5",
