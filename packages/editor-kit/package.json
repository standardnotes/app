{
  "name": "@standardnotes/editor-kit",
  "version": "2.2.5",
  "author": "Standard Notes",
  "description": "Standard Notes Editor Kit",
  "public": true,
  "main": "dist/editor-kit.min.js",
  "types": "dist/@types/index.d.ts",
  "scripts": {
    "build:docs": "typedoc",
    "build:types": "tsc",
