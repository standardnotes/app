{
  "name": "@standardnotes/extension",
  "description": "Standard Notes companion browser extension",
  "version": "1.0.0",
  "scripts": {
    "build": "webpack --config ./webpack.config.js",
    "watch:web": "WEBPACK_DEVTOOL=cheap-module-source-map yarn workspace @standardnotes/web run watch",
    "watch": "webpack --config ./webpack.config.dev.js --watch",
    "build-firefox": "yarn build && web-ext build --source-dir ./dist"
  },
  "devDependencies": {
    "@types/webextension-polyfill": "^0.10.0",
    "babel-loader": "^9.1.0",
    "copy-webpack-plugin": "11.0.0",
    "ts-loader": "^9.4.2",
    "web-ext": "^7.5.0",
    "webextension-polyfill": "^0.10.0",
    "webpack": "*"
  },
  "dependencies": {
    "@mozilla/readability": "^0.4.2"
  }
}
