{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "node",
    "module": "es2020",
    "types": ["node"],
    "allowJs": true,
    "noEmit": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./app/@types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@web/*": ["../web/src/javascripts/*"]
    }
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "app/dist"],
  "files": ["app/index.ts", "app/javascripts/Renderer/Renderer.ts"]
}
