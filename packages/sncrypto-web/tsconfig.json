{
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "inlineSourceMap": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "test/**/*"]
}
