{
  "extends": "../../node_modules/@standardnotes/config/src/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": [
      "../../node_modules/@types",
      "./src/Types/*"
    ],
    "paths": {
      "@Components/*": [
        "./Components/*"
      ],
      "@Lib/*": [
        "./Lib/*"
      ],
      "@Screens/*": [
        "./Screens/*"
      ],
      "@Style/*": [
        "./Style/*"
      ],
      "@Root/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
